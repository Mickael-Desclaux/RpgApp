<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RpgApp.GameMasterApp"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="RpgApp.GameMasterApp.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="250" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <Button Content="Characters" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Height="92" Width="100" Click="Button_Click"/>
        <Frame Grid.Column="1" x:Name="MainContent" Background="Blue"/>
    </Grid>
</Window>
